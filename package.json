{
    "name": "repositoryguide",
    "version": "1.0.0",
    "private": true,
    "description": "An application that helps with analyzing your team's GitHub repository.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hpi-epic/repositoryguide.git"
    },
    "bugs": {
        "url": "https://github.com/hpi-epic/repositoryguide/issues"
    },
    "homepage": "https://github.com/hpi-epic/repositoryguide#readme",
    "config": {
        "port": "3000"
    },
    "scripts": {
        "build": "npm run css",
        "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o assets/css/",
        "css-lint": "stylelint scss/ assets/css/home.css",
        "css-prefix": "postcss --replace assets/css/starter.css --use autoprefixer --map",
        "css": "npm-run-all css-compile css-prefix",
        "server": "serve --listen $npm_package_config_port",
        "start": "npm-run-all --parallel watch server",
        "watch": "nodemon -e html,scss -x \"npm run css\"",
        "clear": "rm -rf node_modules/ && npm i",
        "test": "npm run css-lint && npm run css"
    },
    "dependencies": {
        "@octokit/core": "^3.5.1",
        "@octokit/plugin-paginate-rest": "^2.15.1",
        "@octokit/plugin-throttling": "^3.5.1",
        "@popperjs/core": "^2.9.3",
        "bootstrap": "^5.1.0",
        "bootstrap-icons": "^1.5.0",
        "chart.js": "^3.5.1",
        "chartjs-chart-matrix": "^1.0.2",
        "chartjs-plugin-datalabels": "^2.0.0",
        "octokit": "^1.4.0"
    },
    "devDependencies": {
        "autoprefixer": "^10.3.1",
        "eslint": "^7.30.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-only-warn": "^1.0.2",
        "node-sass": "^6.0.1",
        "nodemon": "^2.0.12",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.6",
        "postcss-cli": "^8.3.1",
        "prettier": "2.3.2",
        "serve": "^12.0.0",
        "stylelint": "^13.13.1",
        "stylelint-config-twbs-bootstrap": "^2.2.3"
    }
}
